<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/questionnaire_reminder/db" VERSION="2025101500" COMMENT="Install XML for questionnaire reminder plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../lib/xmldb/xmldb.xsd">
    <TABLES>
        <TABLE NAME="local_questionnaire_reminder" COMMENT="Log of questionnaire reminders">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="logdate" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="UNIX timestamp"/>
                <FIELD NAME="message" TYPE="text" NOTNULL="true" COMMENT="Log message"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="User ID"/>
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Course ID"/>
                <FIELD NAME="reminderstage" TYPE="text" LENGTH="9" NOTNULL="false" COMMENT="Stage of reminder: default, finecorso or postcorso"/>
                <FIELD NAME="deliverysuccess" TYPE="int" LENGTH="1" NOTNULL="false" COMMENT="True if delivery was successful, false or null otherwise"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>